<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage" class="username">Hello, @context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/LogOut">
            <button type="submit" class="nav-link btn btn-link logout-btn">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <div>
        <a href="Identity/Account/Register">Register</a>
        <a href="Identity/Account/Login">Log in</a>
        </div>
    </NotAuthorized>
</AuthorizeView>
